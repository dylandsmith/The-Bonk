<% if results.present? %>
<ul class="availability-list">
  <% results.each do |result| %>
  <% if result.streaming_services.present? %>
  <ul class="service-list">
    <% result.streaming_services.each do |service| %>
    <li class="service-entry">
      <strong><%= service[:service_name] %></strong>
      (<%= service[:type].capitalize %>)
      <% if service[:price].present? %>
      â€“ <%= service[:price] %>
      <% end %>
      <br>
      <%= link_to "Watch", service[:link], target: "_blank", rel: "noopener" %>
    </li>
    <% end %>
  </ul>
  <% else %>
  <p class="no-streaming">Not currently streaming in the US.</p>
  <% end %>
  <% end %>
</ul>
<% else %>
<p>No results found.</p>
<% end %>