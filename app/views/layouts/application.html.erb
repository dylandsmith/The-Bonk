<!DOCTYPE html>
<html>
  <head>
    <title>Auth</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body data-controller="mentions">
    <div class="main-nav">
      <section class="main-logo">
        <%= link_to root_path do %>
          <%= image_tag 'Logo.png', class: 'resize-image'%>
        <% end %>
      </section>
      <section class="logged-in-user">

      </section>
      <section class="main-sign-up">
        <% if Current.user %>
          <%= button_to 'Update Password', edit_password_path, method: :get, method: :get, class: 'links links-right' %>
        <% else %>
          <%= button_to 'Sign Up', sign_up_path, method: :get, class: 'links links-right' %>
        <% end %>
      </section>
      <section class="main-login">
        <% if Current.user %>
          <%= button_to 'Logout', logout_path, method: :delete, class: 'links links-left' %>
        <% else %>
          <%= button_to 'Login', sign_in_path, method: :get, class: 'links links-left' %>
        <% end %>
      </section>
    </div>
    <%= yield %>
  </body>
</html>
